# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL="file:./dev.db"
DB_TYPE=sqlite

# External APIs
SCRAPER_API_KEY=your_scraper_api_key_here
SCRAPER_API_URL=http://api.scraperapi.com

BRIGHT_DATA_USERNAME=your_bright_data_username
BRIGHT_DATA_PASSWORD=your_bright_data_password
BRIGHT_DATA_ENDPOINT=your_bright_data_endpoint

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# NYC DOH API
NYC_DOH_API_KEY=your_nyc_doh_api_key
NYC_DOH_BASE_URL=https://data.cityofnewyork.us/resource

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Cron Jobs
SCRAPER_SCHEDULE="0 6 * * *"
SCRAPER_TIMEZONE=UTC

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# File Upload
MAX_FILE_SIZE=5242880

# Frontend Configuration (for frontend/.env)
VITE_API_BASE_URL=http://localhost:3001/api